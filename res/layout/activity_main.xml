<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
    xmlns:tools="http://schemas.android.com/tools"
    
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/background"
    >
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="@string/header"
        android:textColor="@color/text"
        android:textSize="40sp" />

    <Button
        android:id="@+id/currentActivity"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonGegenstand"
        android:layout_below="@+id/buttonGegenstand"
        android:onClick="currentActivity"
        android:text="@string/current"
        android:textColor="@color/text" />
    
    <Button
        android:id="@+id/buttonGegenstand"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:onClick="goToItem"
        android:text="@string/item"
        android:textColor="@color/text" />

    <Button
        android:id="@+id/buttonOrt"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonGegenstand"
        android:layout_below="@+id/currentActivity"
        android:onClick="goToPlace"
        android:text="@string/place"
        android:textColor="@color/text" />

    <Button
        android:id="@+id/buttonAktivitaet"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonGegenstand"
        android:layout_below="@+id/buttonOrt"
        android:onClick="goToActivity"
        android:text="@string/activity"
        android:textColor="@color/text" />

    <Button
        android:id="@+id/buttonKontext"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/buttonGegenstand"
        android:layout_below="@+id/buttonAktivitaet"
        android:onClick="goToContext"
        android:text="@string/context"
        android:textColor="@color/text" />

</RelativeLayout>
</ScrollView>