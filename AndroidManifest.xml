<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="de.michi.proximity"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="de.michi.proximity.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="de.michi.proximity.Current_Activity"
            android:label="@string/title_activity_current_" >
        </activity>
        <activity
            android:name="de.michi.proximity.AddItem"
            android:label="@string/title_activity_add_item" >
        </activity>
        <activity
            android:name="de.michi.proximity.AddActivity"
            android:label="@string/title_activity_add" >
        </activity>
        <activity
            android:name="de.michi.proximity.AddContext"
            android:label="@string/title_activity_add_context" >
        </activity>
        <activity
            android:name="de.michi.proximity.AddPlace"
            android:label="@string/title_activity_add_place" >
        </activity>
        <activity
            android:name="de.michi.proximity.ChooseItems"
            android:label="@string/title_activity_choose_items" >
        </activity>
        <activity
            android:name="de.michi.proximity.ChangeItem"
            android:label="@string/title_activity_change_item" >
        </activity>
    </application>

</manifest>